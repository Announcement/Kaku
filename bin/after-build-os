#!/usr/bin/env node

const shell = require('shelljs');
const path = require('path');
const os = process.env.OS;

if (!os) {
  console.log('missing os when after-build-os');
  process.exit(1);
}

let cmd = shell.exec('find dist -d 1 -type f', { silent: true });

if (cmd.code === 0) {
  let files = cmd.output.split('\n');
  files.pop();

  files.forEach(function(from) {
    let filename = path.basename(from);
    let to = path.normalize(path.join('dist', 'release', os, filename));
    shell.mv('-f', from, to);
  });
}
